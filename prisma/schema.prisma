generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    
    email     String   @unique
    hash      String
    
    hashIssuedAt DateTime @default(now())
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@map("users")
}

model Song {
  id           Int      @id @default(autoincrement())

  title        String
  thumbnailUrl String?
  duration     Int
  author       String
  
  releasedAt   DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@map("songs")
}